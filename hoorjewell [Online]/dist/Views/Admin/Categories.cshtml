@model JewelleryShop.Models.ProductCategoryTable

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>
 
<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-10">

        <a href="@Url.Action("addCategory", "Admin")" class="mb-3">
            <input type="button" value="Add New Category" class="btn btn-info btn-lg mb-3" />
        </a>
        
        <!--Showing List of Categories-->
        <ul class="list-group">

            @foreach (var category in ViewData["Categories"] as IEnumerable<JewelleryShop.Models.ProductCategoryTable>)
            {
                <li class="list-group-item shadow p-3 mb-3 bg-white rounded">

                    <h3 class="text-capitalize">@category.categoryName</h3> <br />
                       
                    <hr />

                    <div class="row">
                        <div class="col-md-12">
                            <a href="@Url.Action("addCategory", "Admin", new { id = category.categoryId })" class="btn btn-success ">Edit</a>
                            <a href="@Url.Action("deleteCategory", "Admin", new { id = category.categoryId })" class="btn btn-danger ">Delete</a>
                        </div>
                    </div>

                </li>
            }


        </ul>

    </div>
</div>
