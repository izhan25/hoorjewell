@model JewelleryShop.Models.UsersTable

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout_For_FE.cshtml";
}

<!-- registration-form -->
<div class="registration-form">
    <div class="container">
        <div class="dreamcrub">
            <ul class="breadcrumbs">
                <li class="home">
                    <a href="@Url.Action("Index", "Home")" title="Go to Home Page">Home</a>&nbsp;
                    <span>&gt;</span>
                </li>
                <li class="women">
                    Registration
                </li>
            </ul>
            <ul class="previous">
                <li><a href="@Url.Action("Index", "Home")">Back to Previous Page</a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <h2>Registration</h2>
        <div class="registration-grids">
            <div class="reg-form">
                <div class="reg">
                    <p>Welcome, please enter the following details to continue.</p>
                    <p>If you have previously registered with us, <a href="#">click here</a></p>
                    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                    {
                        if (ViewBag.signup != null)
                        {
                            <h4 class="well text-success" style="padding: 30px 30px 30px 30px">@ViewBag.signup</h4>
                        }

                        <div class="form-group">
                            <label><h4>Your Name:</h4></label>
                            @Html.TextBoxFor(x => x.userName, new { @class = "form-control", @id = "sName", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><h4>Email: </h4></label>
                            @Html.TextBoxFor(x => x.userEmail, new { @class = "form-control", @id = "sEmail", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.userEmail, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><h4>Contact: </h4></label>
                            @Html.TextBoxFor(x => x.userContact, new { @class = "form-control", @id = "sContact" })
                            @Html.ValidationMessageFor(m => m.userContact, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><h4>Password: </h4></label>
                            @Html.PasswordFor(x => x.userPassword, new { @class = "form-control", @id = "sPwd" })
                            @Html.ValidationMessageFor(m => m.userPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><h4>Re-enter Password:</h4></label>
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @id = "sPwd2" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><h4>Address:</h4></label>
                            @Html.TextAreaFor(x => x.userAddress, new { @class = "form-control", @id = "sAddress" })
                        </div>

                        
                       
                        <input type="submit" name="btnSubmitUser" id="signupButton" value="REGISTER NOW">
                        <p class="click">By clicking this button, you are agree to my  <a href="#">Policy Terms and Conditions.</a></p>

                       
                    }
                    @{ Html.EndForm();}
                </div>
            </div>

            <div class="reg-right">
                <h3>Completely Free Account</h3>
                <div class="strip"></div>
                <p>
                    Pellentesque neque leo, dictum sit amet accumsan non, dignissim ac mauris. Mauris rhoncus, lectus tincidunt tempus aliquam, odio
                    libero tincidunt metus, sed euismod elit enim ut mi. Nulla porttitor et dolor sed condimentum. Praesent porttitor lorem dui, in pulvinar enim rhoncus vitae. Curabitur tincidunt, turpis ac lobortis hendrerit, ex elit vestibulum est, at faucibus erat ligula non neque.
                </p>
                <h3 class="lorem">Lorem ipsum dolor.</h3>
                <div class="strip"></div>
                <p>Tincidunt metus, sed euismod elit enim ut mi. Nulla porttitor et dolor sed condimentum. Praesent porttitor lorem dui, in pulvinar enim rhoncus vitae. Curabitur tincidunt, turpis ac lobortis hendrerit, ex elit vestibulum est, at faucibus erat ligula non neque.</p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
