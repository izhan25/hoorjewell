
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout_For_FE.cshtml";
}


<!-- checkout -->
<div class="cart-items">
    <div class="container">
        <div class="dreamcrub">
            <ul class="breadcrumbs">
                <li class="home">
                    <a href="@Url.Action("Index", "Home")" title="Go to Home Page">Home</a>&nbsp;
                    <span>&gt;</span>
                </li>
                <li class="women">
                    Cart
                </li>
            </ul>
            <ul class="previous">
                <li><a href="@Url.Action("Index", "Home")">Back to Previous Page</a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <h2>MY SHOPPING BAG</h2>
        <div class="cart-gd">

            @if(Session["cart"] == null)
            {
                <div class="well">
                    <h2 style="color: black; margin-top: 10px;"> Your Cart Is Currently Empty</h2>
                </div>
            }
            else
            {
                if (ViewData["Cart"] != null)
                {


                    foreach (var item in ViewData["Cart"] as IEnumerable<JewelleryShop.Models.Cart>)
                    {
                        <script>
                        $(document).ready(function(c) {
					        $('.close1').on('click', function(c){
						        $('.cart-header').fadeOut('slow', function(c){
							        $('.cart-header').remove();
						        });
						        });
					    });
                        </script>


                        <div class="cart-header">
                            <a href="@Url.Action("removeItem", "Home", new { id = item.productId })">
                                <div class="close1"> </div>
                            </a>
                            <div class="cart-sec simpleCart_shelfItem">
                                <div class="cart-item cyc">
                                    <img src="~/Design/images/products/@item.productImage" class="img-responsive" alt="">
                                </div>
                                <div class="cart-item-info">
                                    <h3><a href="@Url.Action("SingleProduct", "Home", new { id = item.productId })" target="_blank"> @item.productName </a><span>Pickup time:</span></h3>
                                    <ul class="qty">
                                        <li><p>Quantity :  @item.qty</p></li>
                                        <li><p>FREE delivery</p></li>
                                    </ul>
                                    <div class="delivery">
                                        <p>Price : @item.productPrice</p>
                                        <span>Delivered in 3 Days</span>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>

                            </div>
                        </div>
                    }


                }

                <div class="row">
                    <div class="col-md-10"></div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Order", "Home")" class="pull-right btn btn-info btn-lg btn-block">Order</a>
                    </div>
                </div>
            }


           

            


        </div>
    </div>
</div>

<!-- //checkout -->	




