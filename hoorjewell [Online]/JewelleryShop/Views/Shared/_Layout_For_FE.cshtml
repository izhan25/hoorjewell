<!DOCTYPE html>
<html>
<head>
    <title>Jewellery Shop</title>
	<meta charset="utf-8" />

    <!-- Bootstrap -->
    @*<link href="css/bootstrap.min.css" rel="stylesheet" media="screen">*@
   
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link href="~/Design/FrontEnd/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Design/FrontEnd/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="~/Design/FrontEnd/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Design/FrontEnd/css/component.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Sample Jewellery Online Shopping Website Design with some great effort given by Izhan Yameen" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <!-- for bootstrap working -->
    <script type="text/javascript" src="~/Design/FrontEnd/js/bootstrap-3.1.1.min.js"></script>
    <!-- //for bootstrap working -->
    <!-- cart -->
    <script src="~/Design/FrontEnd/js/simpleCart.min.js"> </script>
    <!-- cart -->
    <link rel="stylesheet" href="~/Design/FrontEnd/css/flexslider.css" type="text/css" media="screen" />

    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>*@


    <!--My styles-->
    <link rel="stylesheet" href="~/Design/FrontEnd/css/mystyles.css" type="text/css" media="all"/>

    
</head>
<body>

    <!-- header-section-starts -->
    <div class="header">
        <div class="header-top-strip">
            <div class="container">
                <div class="header-top-left">
                    <ul>
                        @{ 
                            if(Session["c_Name"] == null)
                            {
                                ViewBag.user = "Login";
                            }
                            else
                            {
                                ViewBag.user = Convert.ToString(Session["c_Name"]);
                            }
                        }

                            
                        <li><a href="@Url.Action("LogIn", "Home")"><span class="glyphicon glyphicon-user"> </span>@ViewBag.user</a></li>
                        

                        @{
                            if (Session["c_Name"] != null)
                            {
                                <li><a href="@Url.Action("logout", "Home")"><span class="glyphicon glyphicon-lock"> </span>Logout</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("SignUp", "Home")"><span class="glyphicon glyphicon-lock"> </span>Create an Account</a></li>
                            }
                        }
                    </ul>
                </div>
                <div class="header-right">
                    <div class="cart box_1">
                        <a href="@Url.Action("Cart", "Home")">
                            <h3>
                                <span > Rs. @ViewBag.amount </span> (<span> @ViewBag.qty </span>)
                                <img src="~/Design/FrontEnd/images/bag.png" alt="">
                            </h3>
                        </a>
                        <p><a href="@Url.Action("removeItem", "Home")" class="simpleCart_empty">Empty cart</a></p>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- header-section-ends -->

    <!--Navbar starts-->
    <div class="banner-top">
        <div class="container">
            <nav class="navbar  navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="logo">
                        <h1><a href="@Url.Action("Index", "Home")"><span>H</span> -Hoor Jewellers</a></h1>
                    </div>
                </div>
                <!--/.navbar-header-->

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>

                        <li class="dropdown">
                            <a href="@Url.Action("Products", "Home")" class="dropdown-toggle" data-toggle="dropdown">Products <b class="caret"></b></a>
                            <ul class="dropdown-menu multi-column columns-3">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <ul class="multi-column-dropdown">
                                            <h6>Categories</h6>

                                            <li>
                                                <a href="@Url.Action("Products", "Home", new { id = "" })"><b>All Products</b></a>
                                            </li>
                                            @foreach(var category in ViewData["Categories"] as IEnumerable<JewelleryShop.Models.ProductCategoryTable>)
                                            {
                                                <li>
                                                    <a href="@Url.Action("Products", "Home", new { id = category.categoryId })">
                                                        @category.categoryName
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </ul>
                        </li>

                        <li><a href="@Url.Action("AboutUs", "Home")">About Us</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">CONTACT</a></li>
                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
        </div>
    </div>
    <!--Navbar Ends-->


    <!--Page Content-->
    @RenderBody()
    <!--Page Content-->
    

    <div class="footer">
        <div class="container">
            <div class="footer_top">
                <div class="span_of_4">
                    <div class="col-md-3 span1_of_4">
                        <h4>Our Products</h4>
                        <ul class="f_nav">
                            <li><a href="@Url.Action("Products", "Home")">New arrivals</a></li>

                            @foreach (var category in ViewData["Categories"] as IEnumerable<JewelleryShop.Models.ProductCategoryTable>)
                            {
                                <li>
                                    <a href="@Url.Action("Products", "Home", new { id = category.categoryId })">
                                        @category.categoryName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-3 span1_of_4">
                        <h4>Help</h4>
                        <ul class="f_nav">
                            <li><a href="@Url.Action("AboutUs", "Home")">About Us</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 span1_of_4">
                        <h4>Account</h4>
                        <ul class="f_nav">
                            <li><a href="@Url.Action("LogIn", "Home")">login</a></li>
                            <li><a href="@Url.Action("SignUp", "Home")">create an account</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 span1_of_4">
                        <h4>Site Map</h4>
                        <ul class="f_nav">
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="@Url.Action("Products", "Home")">Products</a></li>
                            <li><a href="@Url.Action("AboutUs", "Home")">About Us</a></li>
                            <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
                            <li><a href="@Url.Action("LogIn", "Home")">login</a></li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="copyright text-center font-weight-bold mt-3">
                <p>© 2018 E-Project. All Rights Reserved | Design by   <a href="http://www.facebook.com/izhan.yameen">  IZ deveopers</a></p>
            </div>
        </div>
    </div>




    <!--My Cart-->
    <script src="~/Design/FrontEnd/js/forCart.js"></script>
    <script src="~/Design/FrontEnd/js/search.js"></script>
    <script src="~/Design/FrontEnd/js/login.js"></script>
    <script src="~/Design/FrontEnd/js/signup.js"></script>
</body>
</html>
