@model JewelleryShop.Models.RolesTable

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.FontSize = "font-size: 19px;";
}

<h2>Roles</h2>
<hr />


<div class="row">
    <div class="col-md-12">

        <a href="@Url.Action("addEmployee", "Admin")" class="mb-3">
            <input type="button" value="Add Employee" class="btn btn-info btn-lg mb-3" />
        </a>
        <a href="@Url.Action("allRoles", "Admin")" class="mb-3">
            <input type="button" value="Roles" class="btn btn-info btn-lg mb-3" />
        </a>

    </div>
</div>


<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        
        <!--Showing List of Roles-->
        <ul class="list-group">

            @foreach (var employee in ViewData["employees"] as IEnumerable<JewelleryShop.Models.EmployeeTable>)
            {
                if (employee.EmployeeUserName != "admin")
                {
                    <li class="list-group-item shadow p-3 mb-3 bg-white rounded">

                        <div class="row">
                            <div class="col-md-8" style="@ViewBag.FontSize">

                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <td>
                                                <small>User Name: </small>
                                            </td>
                                            <td>
                                                <text class="font-weight-bold">@employee.EmployeeUserName</text>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <small>Password: </small>
                                            </td>
                                            <td>
                                                <text class="font-weight-bold">@employee.EmployeePwd</text>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <small>Contact: </small>
                                            </td>
                                            <td>
                                                <text class="font-weight-bold">@employee.EmployeeContact</text>
                                            </td>
                                        </tr>

                                        @foreach (var role in ViewData["Roles"] as IEnumerable<JewelleryShop.Models.RolesTable>)
                                        {
                                            if (role.roleId.Equals(employee.roleId))
                                            {
                                                <tr>
                                                    <td>
                                                        <small>Role: </small>
                                                    </td>
                                                    <td>
                                                        <text class="font-weight-bold">@role.roleName</text>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </table>
                                </div>

                            </div>

                            <div class="col-md-4 text-center">
                                <img src="~/Design/images/employees/@employee.EmployeeImage" class="img-fluid mt-3" width="150" height="150" />
                                <br />
                                @if (employee.EmployeeUserName != "admin")
                                {
                                    <a href="@Url.Action("addEmployee", "Admin", new { id = employee.Employee_Id })" class="btn btn-success mt-3">Edit</a>
                                    <a href="@Url.Action("deleteEmployee", "Admin", new { id = employee.Employee_Id })" class="btn btn-danger mt-3"  onclick="confirm('Are You Sure To Delete?', @employee.Employee_Id, '/Admin/deleteEmployee/')"}">Delete</a>
                                }
                            </div>
                        </div>

                    </li>
                }


            }


        </ul>














