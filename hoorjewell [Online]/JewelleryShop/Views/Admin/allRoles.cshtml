@model JewelleryShop.Models.RolesTable

@{
    ViewBag.Title = "allRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Role</h2>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-8">

        <!--Showing Table of Roles-->

        <div class="table-responsive">
            <table class="table table-bordered shadow p-3 mb-5 bg-white rounded">
                <thead class="bg-dark text-white text-center font-weight-bold">
                    <tr>
                        <td>Role Name</td>
                        <td>Status</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in ViewData["Roles"] as IEnumerable<JewelleryShop.Models.RolesTable>)
                    {
                        if (role.roleName != "Admin")
                        {
                            <tr>
                                <td>@role.roleName</td>
                                <td class="text-center">
                                    @if (role.status == "active")
                                    {
                                        <button class="btn  btn-success">Active</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger">Disabled</button>
                                    }
                                </td>
                                <td class="text-center">

                                    @if(role.status == "active")
                                    {
                                        <a href="@Url.Action("disableRole", "Admin", new { id = role.roleId })" >Disable</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("activateRole", "Admin", new { id = role.roleId})" >Activate</a>
                                    }

                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>
