@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>
<hr />


<div class="row d-flex justify-content-center">
    <div class="col-md-10">

        <div class="shadow p-3 mb-5 bg-white rounded table-responsive">
            <table class="table table-bordered table-hover bg-light">
                <thead class="bg-dark text-white text-center font-weight-bold">
                    <tr>
                        <td>Name</td>
                        <td>Email</td>
                        <td>Contact</td>
                        <td>Address</td>
                        <td>Action</td>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var user in ViewData["Users"] as IEnumerable<JewelleryShop.Models.UsersTable>)
                    {
                        <tr>
                            <td>@user.userName</td>
                            <td>@user.userEmail</td>
                            <td>@user.userContact</td>
                            <td>@user.userAddress</td>
                            <td class="d-flex justify-content-center">
                                <a href="@Url.Action("deleteUser", "Admin", new { id = user.userId })" class="btn btn-danger" onclick="confirm('Are You Sure To Delete?', @user.userId, '/Admin/deleteUser/')">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>




    </div>
</div>


